<?xml version="1.0"?>
<metacity_theme>

<info>
	<name>Kogaion-daylight</name>
	<author>bionel</author>
	<copyright>Rogentos</copyright>
	<date>July 2015</date>
	<description>Kogaion Linux daylight theme</description>
